<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment_Estatistica">

    <TextView
        android:id="@+id/Titulo_Estatistica"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="16dp"
        android:text="@string/TextoTituloestatisticas"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/TV_pessoas_registadas"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/TV_pessoas_registadas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pessoas registadas:"
        app:layout_constraintBottom_toTopOf="@+id/TV_dias_risco"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Titulo_Estatistica" />

    <TextView
        android:id="@+id/TV_dias_risco"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dias de Risco:"
        app:layout_constraintBottom_toTopOf="@+id/TV_doentes_cronicos"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TV_pessoas_registadas" />

    <TextView
        android:id="@+id/TV_doentes_cronicos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Doentes Cronicos:"
        app:layout_constraintBottom_toTopOf="@+id/TV_n_testes"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.506"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TV_dias_risco" />

    <TextView
        android:id="@+id/TV_n_testes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:text="nÂº testes:"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TV_doentes_cronicos" />

</androidx.constraintlayout.widget.ConstraintLayout>